<Window x:Class="MarioPizzaKassaApp.PizzaDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarioPizzaKassaApp"
        mc:Ignorable="d"
        Title="PizzaDetailsWindow" Height="300" Width="575"
        MaxHeight="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="PizzaNameTextBlock" FontSize="20" Margin="10"/>
            <TextBlock x:Name="PizzaPriceTextBlock" FontSize="16" Margin="10"/>
            <WrapPanel x:Name="PizzaIngredientsPanel" Margin="10" Orientation="Horizontal"></WrapPanel>
            <WrapPanel x:Name="SizeButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Center" Height="60" Margin="40">
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
