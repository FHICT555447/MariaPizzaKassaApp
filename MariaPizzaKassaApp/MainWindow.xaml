<Window x:Class="MariaPizzaKassaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MariaPizzaKassaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="#5E5E5E"></Rectangle>
        <Button Grid.Column="1" Background="#D9D9D9" Height="294" VerticalAlignment="Bottom">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Text="Pizza Amount:" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock Text="Total:" Margin="0,20,0,0" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock Text="Complete Order" Margin="0,20,0,0" FontSize="42" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>